<% @random_feature = random_feature %>
<div class="row homepage main-feature mt-5 mb-5">
  <div class="col-md-12" >
    <div class="imgback col-md-5 col-lg-6 col-xl-6 hidden-sm-down"></div>
    <div class="imgback imgback-image col-md-5 col-lg-6 col-xl-6 hidden-sm-down"
        style="background-image: url(<%= feature_img_url(@random_feature['image']) %>)">
      <div class="feature-caption"><%= @random_feature['caption_html'].html_safe %></div>
    </div>

    <div class="col-md-7 col-lg-6 col-xl-5 rl-menu-title">
      <h1 class="main-title">Find Archival Materials</h1>
      <p>Detailed inventories of <%= number_with_delimiter(collection_count) %> collections</p>

      <%= render_search_bar %>

      <div class="intro-buttons mt-3 mb-3">
        <div id="browse-links" class="btn-group mr-3">
          <%= link_to t('dul_arclight.home.browse_all'), arclight_engine.collections_path, { class: 'btn btn-sm btn-secondary'} %>
          <button href="#" type="button" class="btn btn-secondary btn-sm dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="sr-only">Toggle Dropdown</span>
          </button>
          <div class="dropdown-menu">
            <%= link_to t('dul_arclight.home.browse_all'), arclight_engine.collections_path, { class: 'dropdown-item'} %>
            <%= link_to t('dul_arclight.home.browse_ua'), ua_record_groups_path, { class: 'dropdown-item'} %>
          </div>
        </div>

        <%= render 'search_extra_controls' %>

      </div>
     
      <a class="d-flex align-items-center mt-4 mb-3" href="/repositories">
        <div>Browse All Repositories</div>
      </a>
    </div>
  </div>
</div>
<div class="container-fluid full-width">

  <%# Configurable alert banner; set via un/commenting dul_arclight.home.alert.* %>
  <%# keys in config/locales/dul_arclight.en.yml %>
  <% if I18n.exists?('dul_arclight.home.alert') %>
    <div id="homepage-alert" class="mb-5 col-md-12 banner-wrapper banner-warning d-flex flex-row">
      <div class="banner-part banner-heading">
        <%= blacklight_icon :exclamation_triangle_solid %>
        <span class="banner-heading-text d-none d-lg-inline pr-4">
          <%= t('dul_arclight.home.alert.title') %>
        </span>
      </div>
      <div class="banner-part banner-shadow"></div>
      <div class="banner-part banner-message flex-grow-1">
        <div class="mb-0 banner-message-text p-2">
          <%= t('dul_arclight.home.alert.message_html').html_safe %>
        </div>
      </div>
    </div>
  <% end %>

  <div id="homepage-text-blocks" class="row mt-4 mb-5 d-flex flex-wrap">
    <div class="mb-2">
    <div class="card-title d-flex align-items-center">
      <div class="card-icon"><span class="material-icons">
      info
      </span></div>
      <h2><%= t('dul_arclight.home.about.heading') %></h2>
     </div>
      <p><%= t('dul_arclight.home.about.text_html').html_safe %></p>
    </div>
    
    <div>
    <div class="card-title d-flex align-items-center">
    <div class="card-icon">
    <span class="material-icons">
    email
    </span></div>
      <h2><%= t('dul_arclight.home.catalog.heading') %></h2>
    </div>
      <p><%= t('um_arclight.insert_content') %>></p>
    </div>
  </div>
</div>

<% content_for :twitter_og_meta do %>
  <meta name="description" content="<%= t('dul_arclight.home.about.text_html') %>" />
  <meta property="og:description" content="<%= t('dul_arclight.home.about.text_html') %>" />
<% end %>