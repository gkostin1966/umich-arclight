<%# Restore Blacklight Sidebar that ArcLight Removes %>
<%# https://github.com/projectblacklight/blacklight/blob/master/app/views/layouts/catalog_result.html.erb %>
<%# https://github.com/projectblacklight/blacklight/blob/master/app/views/layouts/blacklight.html.erb %>

<% content_for(:content) do %>
  <% if content_for? :sidebar %>
    <section id="content" class="<%= show_content_classes %>">
      <%= yield %>
    </section>

    <section id="sidebar" class="<%= show_sidebar_classes %>">
      <%= content_for(:sidebar) %>
    </section>
  <% else %>
    <section class="col-md-12">
      <%= yield %>
    </section>
  <% end %>
<% end %>

<%= render template: "layouts/blacklight/base" %>
