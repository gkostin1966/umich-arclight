<% if collection_count.positive? %>
  <li id="<%= id_with_colon %>">
    <span class="font-weight-bold text-muted"><%= subgroup %>. </span>
    <%= link_to search_action_path(f: { ua_record_group_ssim: [id_with_colon] }) do %>
      <%= info.dig('title') -%>
    <% end %>
    <span>(<%= number_with_delimiter(collection_count) %>)</span>
    <p class="small"><%= info.dig('description')&.html_safe %></p>
  </li>
<% end %>
